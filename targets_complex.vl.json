{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/euanleith/BudgetsData/refs/heads/main/targets.json",
    "format": {
      "type": "json",
      "parse": {
        "year": "date:'%Y'"
      }
    }
  },
  "layer": [
    {
      "mark": "bar",
      "transform": [
        {
          "filter": "datum.type == 'actual'"
        }
      ],
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "timeUnit": "year",
          "title": "Year",
          "axis": {
            "grid": false
          }
        },
        "y": {
          "field": "quantity",
          "type": "quantitative",
          "title": "Quantity",
          "axis": {
            "grid": false
          }
        },
        "color": {
          "field": "policy",
        },
        "size": {
          "value": 18
        }
      }
    },
    {
      "mark": "line",
      "transform": [
        {
          "filter": "datum.type == 'target'"
        },
        {
          "calculate": "'Target'", 
          "as": "label"
        },
        {
          "filter": "datum.quantity > 0" 
        }
      ],
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "timeUnit": "year"
        },
        "y": {
          "field": "quantity",
          "type": "quantitative",
          "aggregate": "sum"
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "encoding": {
        "x": { 
          "field": "date", 
          "type": "temporal", 
        },
      },
      "data": {
        "values": [
          {"date": "1 Jan 2008", "label": "2008 Crisis"},
          {"date": "1 Jan 2020", "label": "Covid-19"}
        ],
        "format": {
          "parse": {"date": "utc:'%d %b %Y'"}
        }
      },
      "layer": [
        {
          "mark": { 
            "type": "rule", 
            "color": "grey",
            "opacity": 0.7,
            "strokeDash": [4,2]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "line-top",
            "dx": -5,
            "dy": -93,
            "text": {
              "expr": "datum.label"
            },
            "size": 10
          }
        }
      ]
    }
  ],
  "width": 500
}