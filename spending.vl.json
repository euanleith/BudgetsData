{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "resolve": {"scale": {"color": "independent"}},
  "data": {
    "url": "https://raw.githubusercontent.com/euanleith/BudgetsData/refs/heads/main/spending.csv",
    "format": {
      "type": "csv"
    }
  },
  "vconcat": [
    {
      "layer": [
        {
          "mark": "bar",
          "title": "Housing Expenditure - Target vs. Actual",
          "transform": [
            {
              "filter": "datum.type == 'actual'"
            },
            {
              "calculate": "'Actual'", "as": "label"
            },
            {
              "filter": "datum.quantity > -1" 
            }
          ],
          "encoding": {
            "x": {
              "field": "year",
              "type": "temporal",
              "timeUnit": "year",
              "title": "Year",
              "axis": {
                "grid": false
              }
            },
            "y": {
              "field": "quantity",
              "type": "quantitative",
              "aggregate": "sum",
              "title": "Expenditure (€m)",
              "axis": {
                "grid": false
              }
            },
            "color": {
              "field": "label",
              "legend": {
                "title": ""
              }
            },
            "size": {
              "value": 20
            },
          }
        },
        {
          "mark": "line",
          "transform": [
            {
              "filter": "datum.type == 'target'"
            },
            {
              "calculate": "'Target'", "as": "label"
            },
            {
              "filter": "datum.quantity > -1" 
            }
          ],
          "encoding": {
            "x": {
              "field": "year",
              "type": "temporal",
              "timeUnit": "year"
            },
            "y": {
              "field": "quantity",
              "type": "quantitative",              "aggregate": "sum"
            },
            "xOffset": {
              "value":17.5
            },
            "color": {
              "field": "label"
            }
          }
        }
      ],
      "width": 250
    },
    {
      "layer": [
        {
          "mark": "bar",
          "title": "Split by Capital / Current Expenditure",
          "transform": [
            {
              "filter": "datum.type == 'actual'"
            },
            {
              "filter": "datum.quantity > -1" 
            }
          ],
          "encoding": {
            "x": {
              "field": "year",
              "type": "temporal",
              "timeUnit": "year",
              "title": "Year",
              "axis": {
                "grid": false
              }
            },
            "y": {
              "field": "quantity",
              "type": "quantitative",
              "title": "Expenditure (€m)",
              "axis": {
                "grid": false
              }
            },
            "xOffset": {
              "field": "expenditure_type"
            },
            "color": {
              "field": "expenditure_type",
              "legend": {
                "title": ""
              }
            }
          }
        },
        {
          "mark": "line",
          "transform": [
            {
              "filter": "datum.type == 'target'"
            },
            {
              "filter": "datum.quantity > -1" 
            }
          ],
          "encoding": {
            "x": {
              "field": "year",
              "type": "temporal",
              "timeUnit": "year"
            },
            "y": {
              "field": "quantity",
              "type": "quantitative"
            },
            "xOffset": {
              "value": 40
            },
            "color": {
              "field": "expenditure_type"
            }
          }
        }
      ],
      "width": 500
    }
  ]
}
